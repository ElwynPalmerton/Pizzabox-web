@model PizzaBox.Client.Models.PizzaViewModel

<div class="p-2"></div>
<h2>Which type of pizza would you like?</h2>
<div class="p-2"></div>



@* <form action="/addspecialtypizza/index" method="post">  *@
<form action="/AddSpecialtyPizza/Index" method="post"> 

    @foreach(var item in Model.PizzaTypes)
    {
        <label for="@item">@item.MenuToString() </label>
        @Html.RadioButtonFor(m => m.SelectedPizzaType, @item.MenuToString());
    }

    @Html.Hidden("orderNumber");
    <h3>@Model.orderNumber</h3>

    <div class="p-3"></div>
    <button type="submit" class="btn btn-primary">Select Pizza Type</button>
</form>

